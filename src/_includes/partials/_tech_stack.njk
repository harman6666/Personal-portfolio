<section class="mt-4">
  <h3 class="font-header font-semibold text-xl uppercase mb-6 relative flex items-center">
    <span class="absolute w-1/2 h-full bg-gradient-to-r from-husky-600 via-husky-600 to-transparent"></span>
    <span class="relative z-10 mx-6">
      Tech Stack
    </span>
  </h3>
  {% for item in author.techStack %}
    <div class="pb-8">
      <h4 class="font-header font-semibold uppercase mb-3">{{ item.type }}</h4>
      <ul class="flex flex-wrap mt-2">
        {% for tool in item.tools %}
          <li class="relative inline-block mb-1 mr-1 "><span
          class="flex items-center border subpixel-antialiased rounded px-3 py-1 font-header font-light text-xl md:text-1xl text-lead-text transition-color duration-200 ease-in-out">{{ tool.language }}
            {% if tool.icon %}
              &nbsp;{{ tool.icon | safe }}
            {% endif %}
            </span>
          </li>
        {% endfor %}
      </ul>
    </div>
  {% endfor %}
</section>